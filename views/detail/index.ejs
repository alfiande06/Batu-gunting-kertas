<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <!-- CSS -->
    <link rel="stylesheet" href="/assets/history_style.css">
    <title>Game batu gunting kertas</title>
</head>
<body>
    <div class="align-items-center customHeader" id="header">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-7 my-2">
                    <div class="d-inline-block mr-3">
                        <a href="/viewGameHistory">
                            <svg width="40px" height="40px" viewBox="0 0 16 16" class="bi bi-chevron-left"
                                fill="rgb(114,76,33)" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd"
                                    d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0z" />
                            </svg>
                        </a>
                    </div>
                    <a href="/viewGameHistory">
                        <div class="d-inline-block mr-3">
                            <img src="../../assets/logo.png" width="40px" height="40px" class="" alt="logo">
                        </div>
                    </a>
                    <a href="/viewGameHistory">
                        <div class="d-inline-block mx-auto align-middle headerTitle">
                            Rock Paper Scissors
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <form action="/gamehistory/update/<%= dataUpdate.id %>?_method=PUT" method="POST">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Player Choice</th>
                    <th>Computer Choice</th>
                    <th>Winner</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <input type="text" name="player_choice" id="playerChoice" class="form-control" value="<%= dataUpdate.player_choice %>">
                    </td>
                    <td>
                        <input type="text" name="comp_choice" id="computerChoice" class="form-control" value="<%= dataUpdate.comp_choice %>">
                    </td>
                    <td>
                        <input type="text" name="winner" id="winner" class="form-control" value="<%= dataUpdate.winner %>">
                    </td>
                    <td>
                        <!-- Tombol submit sebaiknya di dalam form -->
                        <button type="submit" class="btn btn-primary">Update</button>
                    </td>
                </tr>                    
            </tbody>
        </table>
    </form>

    <!-- End of header -->

    <!-- Game Content -->
    <div class="container-fluid bgColor">
        <div class="container gameContent">
        </div>
    </div>
</body>
</html>

